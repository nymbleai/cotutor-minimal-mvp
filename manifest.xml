<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">
  
  <!-- Generate a new GUID for your add-in. You can use an online GUID generator. -->
  <Id>a13c9f15-8f8e-4f7b-9c8d-1234567890ab</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Organization</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- The display name of your add-in. Used on the store and various places of the Office UI such as the add-ins dialog. -->
  <DisplayName DefaultValue="KeyLogger MVP"/>
  <Description DefaultValue="Minimal keystroke tracking for Word documents"/>
  
  <!-- Icon for your add-in. Used on installation screens and the add-ins dialog. -->
  <IconUrl DefaultValue="https://cotutor-minimal-mvp.onrender.com/next.svg"/>
  <HighResolutionIconUrl DefaultValue="https://cotutor-minimal-mvp.onrender.com/next.svg"/>
  
  <!--Begin Basic Settings: Add-in metadata, used for all versions of Office unless override provided. -->
  <SupportUrl DefaultValue="https://cotutor-minimal-mvp.onrender.com"/>
  
  <!-- Domains that will be allowed when navigating. For example, if you use ShowTaskpane and then have an href link, navigation will only be allowed if the domain is on this list. -->
  <AppDomains>
    <AppDomain>https://cotutor-minimal-mvp.onrender.com</AppDomain>
  </AppDomains>
  
  <!-- Specifies the contexts where the add-in can be activated. Document = Word -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  
  <DefaultSettings>
    <SourceLocation DefaultValue="https://cotutor-minimal-mvp.onrender.com"/>
  </DefaultSettings>
  
  <!-- Permissions that the add-in requires -->
  <Permissions>ReadWriteDocument</Permissions>
  
  <!-- VersionOverrides is required for commands and other new features -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <!-- GetStarted section appears the first time the add-in is installed -->
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          
          <!-- Function file is required for add-in commands -->
          <FunctionFile resid="Commands.Url"/>
          
          <!-- ExtensionPoint adds the add-in to the ribbon -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                
                <!-- Button that opens the task pane -->
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <!-- Resources section defines all strings, URLs, and images used in the manifest -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://cotutor-minimal-mvp.onrender.com/next.svg"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://cotutor-minimal-mvp.onrender.com/next.svg"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://cotutor-minimal-mvp.onrender.com/next.svg"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://cotutor-minimal-mvp.onrender.com"/>
        <bt:Url id="Commands.Url" DefaultValue="https://cotutor-minimal-mvp.onrender.com"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://cotutor-minimal-mvp.onrender.com"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Get started with KeyLogger"/>
        <bt:String id="CommandsGroup.Label" DefaultValue="KeyLogger"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show KeyLogger"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="Your KeyLogger add-in loaded successfully. Start typing in your document to track keystrokes."/>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Click to open the KeyLogger task pane"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>

